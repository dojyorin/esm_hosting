{
    "name": "esm_hosting",

    "services": {
        "server": {
            "image": "dojyorin/deno:latest",
            "init": true,
            "user": "nonroot",
            "restart": "always",
            "ports": [
                "0.0.0.0:8000:8000"
            ],
            "volumes": [
                "../:/home/nonroot/project:ro"
            ],
            "environment": {
                "ESMH_TARGET": ""
            },
            "command": [
                "run",
                "--allow-net",
                "--allow-env",
                "--allow-read",
                "--allow-write",
                "/home/nonroot/project/main.ts"
            ]
        }
    }
}